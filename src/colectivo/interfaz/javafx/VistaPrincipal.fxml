<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="500.0" prefWidth="400.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="colectivo.interfaz.javafx.ControladorVistaPrincipal">
   <children>
      <Label text="Parada origen:" />
      <ComboBox fx:id="comboOrigen" prefWidth="150.0" />
      <Label text="Parada destino:" />
      <ComboBox fx:id="comboDestino" prefWidth="150.0" />
      <Label text="Dia de la semana (1-7):" />
      <ComboBox fx:id="comboDia" prefWidth="150.0" />
      <Label text="Hora de llegada (HH:MM):" />
      <TextField fx:id="horaField" />
      <Button fx:id="calcularButton" mnemonicParsing="false" onAction="#calcularRecorrido" text="Calcular recorrido" />
      <Label text="Resultados:" />
      <TextArea fx:id="resultadoArea" editable="false" prefHeight="200.0" prefWidth="200.0" wrapText="true" />
   </children>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
</VBox>