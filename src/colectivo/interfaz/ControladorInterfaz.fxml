<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="rootLayout" alignment="TOP_CENTER" spacing="15.0" style="-fx-background-color: linear-gradient(to bottom, #ecf0f1, #bdc3c7);" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="colectivo.interfaz.InterfazJavaFXController">
   <padding>
      <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
   </padding>
   
   <!-- Título -->
   <Label text="Consulta de Recorridos" style="-fx-text-fill: #2c3e50;">
      <font>
         <Font name="System Bold" size="24.0" />
      </font>
   </Label>
   
   <!-- Panel de Formulario -->
   <VBox spacing="12.0" style="-fx-background-color: white; -fx-background-radius: 10px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);">
      <padding>
         <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </padding>
      
      <!-- Parada de Origen -->
      <Label text="Parada de Origen:" style="-fx-text-fill: #34495e;">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <ComboBox fx:id="comboOrigen" maxWidth="Infinity" promptText="Seleccione parada de origen" style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-width: 2px; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-font-size: 13px; -fx-padding: 8px;" />
      
      <!-- Parada de Destino -->
      <Label text="Parada de Destino:" style="-fx-text-fill: #34495e;">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <ComboBox fx:id="comboDestino" maxWidth="Infinity" promptText="Seleccione parada de destino" style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-width: 2px; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-font-size: 13px; -fx-padding: 8px;" />
      
      <!-- Día de la Semana -->
      <Label text="Día de la Semana:" style="-fx-text-fill: #34495e;">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <ComboBox fx:id="comboDia" maxWidth="Infinity" promptText="Seleccione día" style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-width: 2px; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-font-size: 13px; -fx-padding: 8px;" />
      
      <!-- Hora de Llegada -->
      <Label text="Hora de Llegada:" style="-fx-text-fill: #34495e;">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="horaField" promptText="HH:MM (Ejemplo: 14:30)" style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-width: 2px; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-font-size: 13px; -fx-padding: 8px;" />
      
      <!-- Botón Calcular -->
      <Button fx:id="calcularButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#calcularRecorrido" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 12px; -fx-background-radius: 8px; -fx-cursor: hand;" text="🔍 Calcular Recorrido" onMouseEntered="#onButtonEntered" onMouseExited="#onButtonExited" />
   </VBox>
   
   <!-- Panel de Resultados -->
   <VBox spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);">
      <padding>
         <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </padding>
      
      <Label text="Resultados:" style="-fx-text-fill: #34495e;">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <TextArea fx:id="resultadoArea" editable="false" prefRowCount="10" style="-fx-control-inner-background: #f8f9fa; -fx-font-family: 'Consolas', 'Courier New'; -fx-font-size: 12px; -fx-border-color: #dcdde1; -fx-border-width: 1px; -fx-border-radius: 5px;" />
   </VBox>
</VBox>