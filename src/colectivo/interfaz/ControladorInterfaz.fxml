<?xml version="1.0" encoding="UTF-8"?>

<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>

<HBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="colectivo.interfaz.ControladorInterfaz"
      spacing="20" fillHeight="true" 
      alignment="TOP_CENTER"
      style="-fx-background-color: linear-gradient(to bottom, #ecf0f1, #bdc3c7);">

    <padding>
        <Insets topRightBottomLeft="20"/>
    </padding>

    <VBox spacing="15" fillWidth="true" prefWidth="420">
        
        <HBox alignment="TOP_RIGHT" spacing="5">
    		<MenuButton fx:id="menuIdioma" contentDisplay="GRAPHIC_ONLY" styleClass="icon-menu-button"
            		    mnemonicParsing="false">
        		<graphic>
            		<FontIcon iconLiteral="fas-globe" iconSize="20" iconColor="#34495e"/>
        		</graphic>
    		</MenuButton>
		</HBox>
		
        <HBox alignment="CENTER" spacing="10">
    		<FontIcon iconLiteral="fas-bus-alt" iconSize="22" iconColor="#2c3e50"/>
    		<Label text="%tituloAplicacion"
           		   style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-padding: 5 0 10 0;"/>
		</HBox>

        <VBox spacing="10"
              maxWidth="460"
              style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);">

            <HBox spacing="5" alignment="CENTER_LEFT">
    			<FontIcon iconLiteral="fas-map-marker-alt" iconSize="16" iconColor="#34495e" />
    			<Label text="%etiquetaOrigen" style="-fx-text-fill: #34495e; -fx-font-weight: bold;"/>
			</HBox>
			<ComboBox fx:id="comboOrigen" maxWidth="Infinity"/>

            <HBox spacing="5" alignment="CENTER_LEFT">
    			<FontIcon iconLiteral="fas-flag-checkered" iconSize="16" iconColor="#34495e" />
    			<Label text="%etiquetaDestino" style="-fx-text-fill: #34495e; -fx-font-weight: bold;"/>
			</HBox>
			<ComboBox fx:id="comboDestino" maxWidth="Infinity"/>

            <HBox spacing="5" alignment="CENTER_LEFT">
    			<FontIcon iconLiteral="fas-calendar-day" iconSize="16" iconColor="#34495e" />
    			<Label text="%etiquetaDia" style="-fx-text-fill: #34495e; -fx-font-weight: bold;"/>
			</HBox>
			<ComboBox fx:id="comboDia" maxWidth="Infinity"/>

            <HBox spacing="5" alignment="CENTER_LEFT">
   				<FontIcon iconLiteral="fas-clock" iconSize="16" iconColor="#34495e" />
    			<Label text="%etiquetaHora" style="-fx-text-fill: #34495e; -fx-font-weight: bold;"/>
			</HBox>
            <HBox spacing="8">
                <ComboBox fx:id="comboHora" prefWidth="90"/>
                <Label text=":" style="-fx-font-size: 16; -fx-text-fill: #2c3e50; -fx-padding: 0 4 0 4;"/>
                <ComboBox fx:id="comboMinuto" prefWidth="90"/>
            </HBox>

			<CheckBox fx:id="checkFeriado" text="%checkEsFeriado" />

            <HBox spacing="10" alignment="CENTER_LEFT">
   				<Button fx:id="btnCalcular"
            			text="%botonCalcular"
            			onAction="#onCalcular"
            			maxWidth="Infinity"
            			styleClass="primary-button"
            			HBox.hgrow="ALWAYS"
            			contentDisplay="LEFT"> <graphic>
			            <FontIcon iconLiteral="fas-search" iconSize="14" iconColor="white"/>
        			</graphic>
			    </Button>

    			<Button fx:id="btnLimpiar"
			            text="%botonLimpiar"
            			onAction="#onLimpiar"
            			styleClass="secondary-button"
            			prefWidth="100"
            			contentDisplay="LEFT"> <graphic>
            			<FontIcon iconLiteral="fas-undo" iconSize="14" iconColor="#34495e"/>
        			</graphic>	
    			</Button>
			</HBox>
                    
                    <HBox alignment="CENTER" prefHeight="30.0">
    					<ImageView fx:id="animacionCarga" visible="false" fitHeight="30.0" fitWidth="30.0">
        					<image>
            					<Image url="@recursos/loading.gif" />
        					</image>
    					</ImageView>
					</HBox>
        </VBox>

        <VBox spacing="8"
              maxWidth="460"
              VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);">
            <HBox spacing="5" alignment="CENTER_LEFT">
    			<FontIcon iconLiteral="fas-list-ul" iconSize="16" iconColor="#34495e"/>
    			<Label text="%etiquetaResultados" style="-fx-text-fill: #34495e; -fx-font-weight: bold;"/>
			</HBox>
			<Accordion fx:id="accordionResultados" VBox.vgrow="ALWAYS" />
        </VBox>
        
    </VBox>


    <VBox spacing="8"
          HBox.hgrow="ALWAYS" 
          VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);">
        <HBox spacing="5" alignment="CENTER_LEFT">
    		<FontIcon iconLiteral="fas-map-marked-alt" iconSize="16" iconColor="#34495e"/>
    		<Label text="%etiquetaMapa" style="-fx-text-fill: #34495e; -fx-font-weight: bold;"/>
		</HBox>
		<WebView fx:id="webViewMapa" VBox.vgrow="ALWAYS" />
 	</VBox>
    
</HBox>